@model ProjectsBaseWebApplication.ViewModels.AddProjectViewModel
@{
    ViewBag.Title = "Add project";
}

<h2>@ViewBag.Title</h2>

@Html.ValidationSummary(true, "", new {@class = "alert-danger"})

@using (Html.BeginForm())
{
    <div class="row well">
        <div class="form-group row">
            <div class="col-md-6 col-xs-4 mb-10 text-right">
                @Html.LabelFor(m => m.Project.ProjectName, new { @class = "pt-3" }):
            </div>
            <div class="col-md-6 col-xs-4 ">
                @Html.TextBoxFor(m => m.Project.ProjectName, new {@class = "form-control"})
            </div>
            <div class="col-md-6 col-xs-4">
                @Html.ValidationMessageFor(m => m.Project.ProjectName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-6 col-xs-4 mb-10 text-right">
                @Html.LabelFor(m => m.Project.ClientId, new { @class = "pt-3" }):
            </div>
            <div class="col-md-6 col-xs-4 ">
                @Html.DropDownListFor(m => m.Project.ClientId, Model.ClientsSelectList, "", new {@class = "form-control"})
            </div>
            <div class="col-md-6 col-xs-4">
                @Html.ValidationMessageFor(m => m.Project.ClientId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-6 col-xs-4 mb-10 text-right">
                @Html.LabelFor(m => m.Project.ProjectStartDate, new { @class = "pt-3" }):
            </div>
            <div class="col-md-6 col-xs-4 ">
                @Html.TextBoxFor(m => m.Project.ProjectStartDate, new { type = "date", @class = "form-control" })
            </div>
            <div class="col-md-6 col-xs-4">
                @Html.ValidationMessageFor(m => m.Project.ProjectStartDate, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-6 col-xs-4 mb-10 text-right">
                @Html.LabelFor(m => m.Project.ProjectEndDate, new { @class = "pt-3" }):
            </div>
            <div class="col-md-6 col-xs-4 ">
                @Html.TextBoxFor(m => m.Project.ProjectEndDate, new { type = "date", @class = "form-control" })
            </div>
            <div class="col-md-6 col-xs-4">
                @Html.ValidationMessageFor(m => m.Project.ProjectEndDate, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 text-center">
                <button type="submit" class="btn btn-primary btn-eac-main">Save</button>
            </div>
            <div class="col-md-12 text-center">
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-eac-secondary">Cancel</a>
            </div>
        </div>
    </div>

    
}

