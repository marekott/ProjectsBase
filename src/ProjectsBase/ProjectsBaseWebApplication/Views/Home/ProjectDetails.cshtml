@model ProjectsBaseShared.Models.Project
@{
    ViewBag.Title = @Model.ProjectName;
}

<h2 class="mb-20">@Model.ProjectName</h2>

<div class="row">
    <div class="row">
        <div class="col-md-6 col-xs-4 mb-10 text-right">
            @Html.LabelFor(p => p.ProjectName): 
        </div>
        <div class="col-md-6 col-xs-4 ">
            @Model.ProjectName
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-xs-4 mb-10 text-right">
            @Html.LabelFor(p => p.ProjectStartDate):
        </div>
        <div class="col-md-6 col-xs-4">
            @Model.ProjectStartDate.ToShortDateString()
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-xs-4 mb-10 text-right">
            @Html.LabelFor(p => p.ProjectEndDate):
        </div>
        <div class="col-md-6 col-xs-4">
            @Model.ProjectEndDate.ToShortDateString()
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12 text-center">
        <a class="btn btn-primary btn-eac-main" href="@Url.Action("Add", "AuditTeam", new {guid = @Model.ProjectId})">Join</a>
    </div>
    <div class="col-md-12 text-center">
        <a class="btn btn-primary btn-eac-secondary" href="@Url.Action("Index", "Home")">Cancel</a>
    </div>
</div>

