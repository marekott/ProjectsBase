@model ProjectsBaseShared.Models.Project
@{
    ViewBag.Title = @Model.ProjectName;
}

<h2 class="mb-3">@Model.ProjectName</h2>

<div class="row">
    <div class="col-6 text-right">
        @Html.LabelFor(p => p.ProjectName):
    </div>
    <div class="col-6">
        @Model.ProjectName
    </div>
    <div class="col-6 text-right">
        @Html.LabelFor(p => p.Client):
    </div>
    <div class="col-6">
        @Model.Client.ClientName
    </div>
    <div class="col-6 text-right">
        @Html.LabelFor(p => p.ProjectStartDate):
    </div>
    <div class="col-6">
        @Model.ProjectStartDate.ToShortDateString()
    </div>
    <div class="col-6 text-right">
        @Html.LabelFor(p => p.ProjectEndDate):
    </div>
    <div class="col-6">
        @Model.ProjectEndDate.ToShortDateString()
    </div>
</div>

<div class="row mt-2">
    <div class="col-md-2 offset-md-4 mb-2">
        <a class="btn btn-primary btn-eac-main btn-block" href="@Url.Action("Add", "AuditTeam", new {guid = @Model.ProjectId})">Join</a>
    </div>
    <div class="col-md-2 text-center">
        <a class="btn btn-primary btn-eac-secondary btn-block" href="@Url.Action("Index", "Home")">Cancel</a>
    </div>
</div>


